@model TaskManager.Models.UserTaskModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj przypisanie zadania</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Zadanie</label>
        <select asp-for="TaskId" class="form-control">
            @foreach (var task in (IEnumerable<TaskManager.Models.AppTaskModel>)ViewBag.Tasks)
            {
                <option value="@task.Id">@task.Title</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Użytkownik</label>
        <input asp-for="UserId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">Zapisz zmiany</button>
</form>

<a href="/UserTask" class="btn btn-secondary mt-2">Powrót</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
