@model TaskManager.Models.UserTask

@{
    ViewData["Title"] = "Create User Task";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="UserId">User</label>
        <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "Id", "UserName"))">
            <option value="">-- Select User --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="TaskId">Task</label>
        <select asp-for="TaskId" class="form-control" asp-items="@(new SelectList(ViewBag.Tasks, "Id", "Title"))">
            <option value="">-- Select Task --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a href="@Url.Action("Index", "UserTask")" class="btn btn-secondary">Back to List</a>
