@model IEnumerable<TaskManager.Models.UserTask>

<h1>Lista przypisanych zadań</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Zadanie</th>
            <th>Użytkownik</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@(item.Task != null ? item.Task.Title : "Brak zadania")</td>
                <td>@(item.User != null ? item.User.UserName : "Brak użytkownika")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Dodaj nowe przypisanie</a>
