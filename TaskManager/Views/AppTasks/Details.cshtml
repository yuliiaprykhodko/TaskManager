@model TaskManager.Models.AppTask

@{
    ViewData["Title"] = "Szczegóły zadania";
}

<h1>@Model.Title</h1>

<p><strong>Opis:</strong> @Model.Description</p>
<p><strong>Priorytet:</strong> @Model.Priority</p>
<p><strong>Projekt:</strong> @Model.Project?.Name</p>

<a href="@Url.Action("Edit", "Apptasks", new { id = Model.Id })" class="btn btn-warning">Edytuj</a>
<a href="@Url.Action("Delete", "Apptasks", new { id = Model.Id })" class="btn btn-danger">Usuń</a>
<a href="@Url.Action("Index", "Apptasks")" class="btn btn-secondary">Powrót do listy</a>
